@using Microsoft.AspNetCore.Mvc.Rendering
@model Witcher3IngredientsMVC.Models.ViewModels.RecipeUpsertViewModel

@{
    ViewData["Title"] = "Edit Recipe";
    // Handle case where Requirements may be empty
    var availableItems = Model.Requirements?.FirstOrDefault()?.AvailableItems ?? new List<SelectListItem>();
}

<h2>Edit Recipe</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h5>Requirements</h5>

    <table class="table" id="requirementsTable">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="requirementsBody">
            @for (int i = 0; i < Model.Requirements.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="Requirements[@i].ItemId"
                                asp-items="Model.Requirements[@i].AvailableItems"
                                class="form-select">
                            <option value="">-- Select Item --</option>
                        </select>
                    </td>
                    <td>
                        <input asp-for="Requirements[@i].Quantity" class="form-control" type="number" min="1" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm remove-row">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button" id="add-row" class="btn btn-outline-success mb-3">+ Add Requirement</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        // Add new requirement row dynamically
        document.getElementById("add-row").addEventListener("click", function () {
            const tableBody = document.getElementById("requirementsBody");
            const rowCount = tableBody.children.length;

            const newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td>
                    <select name="Requirements[${rowCount}].ItemId" class="form-select">
                        <option value="">-- Select Item --</option>
                        @foreach (var item in availableItems)
                        {
                                <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </td>
                <td>
                    <input name="Requirements[${rowCount}].Quantity" type="number" min="1" class="form-control" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm remove-row">Remove</button>
                </td>
            `;
            tableBody.appendChild(newRow);
        });

        // Remove a requirement row
        document.addEventListener('click', function (e) {
            if (e.target.classList.contains('remove-row')) {
                e.target.closest('tr').remove();
                reindexRows();
            }
        });

        // Reindex all row inputs (so model binding works on submit)
        function reindexRows() {
            const rows = document.querySelectorAll('#requirementsBody tr');
            rows.forEach((row, index) => {
                row.querySelectorAll('select, input').forEach(el => {
                    const name = el.getAttribute('name');
                    if (name) {
                        el.setAttribute('name', name.replace(/\[\d+\]/, `[${index}]`));
                    }

                    const id = el.getAttribute('id');
                    if (id) {
                        el.setAttribute('id', id.replace(/_\d+__/, `_${index}__`));
                    }
                });
            });
        }
    </script>
}
