@using Witcher3IngredientsMVC.Models.ViewModels
@model ItemUpsertViewModel



<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="SelectedCategory" asp-items="Model.Categories" class="form-select"></select>
    </div>

    
    <div class="mb-3">
        <label class="form-label">Dismantles Into</label>
        <select asp-for="SelectedDismantleIntos" asp-items="Model.DismantleIntos"  class="form-select"></select>
    </div>






    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
